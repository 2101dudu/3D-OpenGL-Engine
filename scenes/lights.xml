<?xml version="1.0" ?>
<world>
    <window width="1080" height="720"/>
    <camera>
        <position x="5" y="5" z="5"/>
        <lookAt x="0" y="0" z="0"/>
        <up x="0" y="1" z="0"/>
        <projection fov="60" near="0.01" far="1000"/>
    </camera>
    <lights>
        <light type="directional" dirX="1" dirY="1" dirZ="1" />
    </lights>
    <group name="LightningTest">
        <group name="point" clickableInfo="../../group_info/sun.txt">
            <models>
                <model file="../../objects/sphere.3d">
                    <color>
                        <diffuse R="200" G="50" B="50" />
                        <ambient R="200" G="50" B="50" />
                        <specular R="200" G="200" B="200" />
                        <emissive R="0" G="0" B="0" />
                        <shininess value="128" />
                    </color>
                </model>
            </models>
        </group>
        <group name="point" clickableInfo="../../group_info/sun.txt">
            <transform>
                <translate x="0" y="0" z="-5"/>
            </transform>
            <models>
                <model file="../../objects/sphere.3d">
                    <color>
                        <diffuse R="200" G="50" B="50" />
                        <ambient R="200" G="50" B="50" />
                        <specular R="200" G="200" B="200" />
                        <emissive R="0" G="0" B="0" />
                        <shininess value="128" />
                    </color>
                </model>
            </models>
        </group>
    </group>
</world>
