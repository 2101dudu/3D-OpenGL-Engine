<?xml version="1.0" ?>
<world>
    <window width="1080" height="720"/>
    <camera>
        <position x="10" y="10" z="10"/>
        <lookAt x="0" y="0" z="0"/>
        <up x="0" y="1" z="0"/>
        <projection fov="60" near="0.01" far="1000"/>
    </camera>
    <lights>
        <light type="point" posX="0" posY="0" posZ="0" />
    </lights>
    <group name="LightningTest">
        <group name="Sun" clickableInfo="../../group_info/sun.txt">
            <transform>
                <scale x="3" y="3" z="3"/>
            </transform>
            <models>
                <model file="../../objects/sphere.3d">
                    <texture file="../../textures/sun.jpg" />
                    <color>
                        <diffuse R="200" G="200" B="200" />
                        <ambient R="200" G="200" B="200" />
                        <specular R="200" G="200" B="200" />
                        <emissive R="200" G="200" B="200" />
                        <shininess value="128" />
                    </color>
                </model>
            </models>
        </group>

        <group name="Sun2" clickableInfo="../../group_info/sun.txt">
            <transform>
                <translate x="3" y="3" z="3"/>
            </transform>
            <models>
                <model file="../../objects/sphere.3d">
                    <texture file="../../textures/earth.jpg" />
                    <color>
                        <diffuse R="200" G="200" B="200" />
                        <ambient R="50" G="50" B="80" />
                        <specular R="200" G="200" B="200" />
                        <emissive R="0" G="0" B="0" />
                        <shininess value="20" />
                    </color>
                </model>
            </models>
        </group>
    </group>
</world>
